{
  "extends": "../../tsconfig.json",
  "include": ["src", "types"],
  "compilerOptions": {
    "target": "ES5",
    "module": "ESNext",
    "declaration": true,
    "declarationMap": false,
    "sourceMap": false,
    "removeComments": true,
    "jsx": "react-jsx",
    "rootDir": "src",
    "outDir": "lib",
    "baseUrl": "./",
    "lib": ["ESNext", "DOM"],
    "paths": {
      "@/*": ["src/*"]
    },
    "types": ["node"],
    "typeRoots": ["node_modules/types", "types"],
    "allowUmdGlobalAccess": true
  }
}
